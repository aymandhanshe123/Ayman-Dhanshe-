{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Banner Title",
      "default": "New Collection"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Banner Subtitle",
      "default": "Explore our exclusive range"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="custom-banner" style="background-image: url({{ section.settings.background_image | image_url: width: 2000 }});">
  <div class="custom-banner__overlay"></div>
  <div class="custom-banner__content">
    <h1>{{ section.settings.title }}</h1>
    <p>{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.button_link }}" class="custom-banner__btn">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

<style>
.custom-banner {
  position: relative;
  background-size: cover;
  background-position: center;
  min-height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
}
.custom-banner__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.4);
}
.custom-banner__content {
  position: relative;
  text-align: center;
  color: #fff;
  max-width: 800px;
  padding: 20px;
}
.custom-banner__btn {
  display: inline-block;
  margin-top: 20px;
  padding: 14px 28px;
  background: #111;
  color: #fff;
  font-weight: 600;
  border-radius: 50px;
  transition: transform 0.3s ease, background 0.3s ease;
}
.custom-banner__btn:hover {
  transform: scale(1.05);
  background: #444;
}
</style>
